<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ebedeb"
    tools:context=".descfragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imagegholder"
            android:layout_width="230dp"
            android:layout_height="230dp"
            android:layout_margin="6dp"
            android:src="@drawable/profile"
            app:civ_border_color="#FF000000" />

        <EditText
                android:id="@+id/nameholder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:background="#ebedeb"
                android:drawableLeft="@drawable/ic_person"
                android:drawablePadding="10dp"
                android:hint="Your name"
                android:inputType="textPersonName"
                android:padding="10dp"
                android:textColor="@color/black"
                android:textColorHighlight="@android:color/tab_indicator_text"
                android:textColorHint="@android:color/secondary_text_dark"
                android:textSize="18sp"
                app:drawableTint="@color/colorPrimary" />

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="36dp"
            android:layout_marginTop="-60dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="50dp"
            android:text="Name" />

        <EditText
                android:id="@+id/courseholder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:background="#ebedeb"
                android:drawableLeft="@drawable/ic_call"
                android:drawablePadding="10dp"

                android:padding="10dp"
                android:textColor="@color/black"
                android:textColorHighlight="@android:color/tab_indicator_text"
                android:textColorHint="@android:color/secondary_text_dark"
                android:textSize="18sp"
                app:drawableTint="@color/colorPrimary" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="36dp"
            android:layout_marginTop="-60dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="50dp"
            android:text="Mobile" />

            <EditText
                android:id="@+id/emailholder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:background="#ebedeb"
                android:drawableLeft="@drawable/ic_email"
                android:drawablePadding="10dp"


                android:inputType="textEmailAddress"
                android:padding="10dp"
                android:scrollbarSize="2dp"
                android:textColor="@color/black"
                android:textColorHighlight="@android:color/tab_indicator_text"
                android:textColorHint="@android:color/secondary_text_dark"
                android:textSize="18sp"
                app:drawableTint="@color/colorPrimary" />

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="36dp"
            android:layout_marginTop="-60dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="50dp"
            android:text="Email id" />

        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:background="#ebedeb"
            android:drawableLeft="@drawable/ic_password"
            android:drawablePadding="10dp"
            android:padding="10dp"
            android:scrollbarSize="2dp"
            android:textColor="@color/black"
            android:textColorHighlight="@android:color/tab_indicator_text"
            android:textColorHint="@android:color/secondary_text_dark"
            android:textSize="18sp"
            app:drawableTint="@color/colorPrimary" />

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="36dp"
            android:layout_marginTop="-60dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="50dp"
            android:text="Password" />

        <EditText
            android:id="@+id/about"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:background="#ebedeb"
            android:drawableLeft="@drawable/ic_info"
            android:drawablePadding="10dp"
            android:ems="10"
            android:gravity="start|top"
            android:hint="About"
            android:inputType="textMultiLine"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textColorHighlight="@android:color/tab_indicator_text"
            android:textColorHint="@android:color/secondary_text_dark"
            android:textSize="18sp"
            app:drawableTint="@color/colorPrimary" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="36dp"
            android:layout_marginTop="-60dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="50dp"
            android:text="About" />

        <EditText
            android:id="@+id/latitude"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:background="#ebedeb"
            android:drawableLeft="@drawable/ic_mylocation"
            android:drawablePadding="10dp"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textColorHighlight="@android:color/tab_indicator_text"
            android:textColorHint="@android:color/secondary_text_dark"
            android:textSize="18sp"
            app:drawableTint="@color/colorPrimary" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="36dp"
            android:layout_marginTop="-60dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="50dp"
            android:text="Latitude" />

        <EditText
            android:id="@+id/longitude"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:background="#ebedeb"
            android:drawableLeft="@drawable/ic_mylocation"
            android:drawablePadding="10dp"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textColorHighlight="@android:color/tab_indicator_text"
            android:textColorHint="@android:color/secondary_text_dark"
            android:textSize="18sp"
            app:drawableTint="@color/colorPrimary" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="36dp"
            android:layout_marginTop="-60dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="50dp"
            android:text="Longitude" />

        <TextView
            android:id="@+id/checklocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Location"
            android:drawablePadding="3dp"
            android:textColor="#034942"
            android:background="#FFF"
            android:textSize="20sp"
            android:padding="5dp"
            android:drawableLeft="@drawable/ic_location"
            android:drawableTint="#FF9800"
            android:layout_gravity="center"
            android:layout_marginRight="20dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="from"
            android:layout_marginTop="30dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shrishail Bagale"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/colorPrimary"/>


    </LinearLayout>



</ScrollView>