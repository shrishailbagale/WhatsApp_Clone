<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsActivity"
    android:background="#ebedeb"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SettingsActivity"
        android:background="#ebedeb"
        android:orientation="horizontal">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarSetting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme" >

    <ImageView
        android:id="@+id/backArrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_weight="1"
        app:srcCompat="@drawable/arrow_left"
        app:tint="@android:color/white" />

        <ImageView
            android:id="@+id/btnchatmenu"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:padding="10dp"
            android:tint="@color/white"
            app:srcCompat="@drawable/ic_menu" />

    </androidx.appcompat.widget.Toolbar>

        <LinearLayout
            android:id="@+id/LinearLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_margin="6dp"
                android:src="@drawable/profile"
                app:civ_border_color="#FF000000" />

            <TextView
                android:id="@+id/change_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Change Profile"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp"
                android:textStyle="bold" />


            <EditText
                android:id="@+id/txtUsername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:background="#ebedeb"
                android:drawableLeft="@drawable/ic_baseline_person_outline_24"
                android:drawablePadding="10dp"
                android:hint="Your name"
                android:inputType="textPersonName"
                android:padding="15dp"
                android:textColor="@color/black"
                android:textColorHighlight="@android:color/tab_indicator_text"
                android:textColorHint="@android:color/secondary_text_dark"
                android:textSize="20sp"
                app:drawableTint="@color/colorPrimary" />

            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="38dp"
                android:layout_marginTop="-68dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="50dp"
                android:text="Name" />

            <EditText
                android:id="@+id/about"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:background="#ebedeb"
                android:drawableLeft="@drawable/ic_baseline_info_24"
                android:drawablePadding="10dp"
                android:ems="10"
                android:gravity="start|top"
                android:hint="About"
                android:inputType="textMultiLine"
                android:padding="15dp"
                android:textColor="@color/black"
                android:textColorHighlight="@android:color/tab_indicator_text"
                android:textColorHint="@android:color/secondary_text_dark"
                android:textSize="20sp"
                app:drawableTint="@color/colorPrimary" />

            <TextView
                android:id="@+id/about_us"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="38dp"
                android:layout_marginTop="-68dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="50dp"
                android:text="About" />

            <EditText
                android:id="@+id/txtMobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:background="#ebedeb"
                android:drawableLeft="@android:drawable/stat_sys_phone_call"
                android:drawablePadding="10dp"
                android:ems="10"
                android:gravity="start|top"
                android:hint="Mobile Number"
                android:inputType="textMultiLine"
                android:padding="15dp"
                android:textColor="@color/black"
                android:textColorHighlight="@android:color/tab_indicator_text"
                android:textColorHint="@android:color/secondary_text_dark"
                android:textSize="20sp"
                app:drawableTint="@color/colorPrimary" />

            <TextView
                android:id="@+id/mobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="38dp"
                android:layout_marginTop="-68dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="50dp"
                android:text="Mobile" />

            <EditText
                android:id="@+id/txtEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:background="#ebedeb"
                android:scrollbarSize="2dp"
                android:drawableLeft="@android:drawable/sym_action_email"
                android:drawablePadding="10dp"
                android:ems="10"
                android:gravity="start|top"
                android:hint="Email ID"
                android:inputType="textMultiLine"
                android:padding="15dp"
                android:textColor="@color/black"
                android:textColorHighlight="@android:color/tab_indicator_text"
                android:textColorHint="@android:color/secondary_text_dark"
                android:textSize="20sp"
                app:drawableTint="@color/colorPrimary" />

            <TextView
                android:id="@+id/emailshow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="38dp"
                android:layout_marginTop="-68dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="50dp"
                android:text="Email id" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/saveProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/btn_bg"
                android:text="Save"
                android:textColor="@color/white">

            </androidx.appcompat.widget.AppCompatButton>

            <com.google.android.gms.ads.AdView
                android:id="@+id/adView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                ads:adSize="BANNER"
                ads:adUnitId="@string/banner_ad_unit_id">
            </com.google.android.gms.ads.AdView>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/LinearLayout1"
            android:layout_marginTop="5dp"
            android:background="@drawable/linear_bg"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="20dp">


            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="80dp"
                android:layout_marginRight="50dp"
                android:layout_marginBottom="5dp"
                android:drawableLeft="@android:drawable/ic_lock_idle_lock"
                android:drawablePadding="10dp"
                android:padding="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="Privacy Policy"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                app:drawableTint="@android:color/secondary_text_dark" />

            <TextView
                android:id="@+id/aboutwhatsapp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="80dp"
                android:layout_marginRight="50dp"
                android:layout_marginBottom="5dp"
                android:drawableLeft="@drawable/ic_baseline_info_24"
                android:drawablePadding="10dp"
                android:padding="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="About Us"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                app:drawableTint="@android:color/secondary_text_dark" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="80dp"
                android:layout_marginRight="50dp"
                android:layout_marginBottom="5dp"
                android:drawableLeft="?attr/actionModeShareDrawable"
                android:drawablePadding="10dp"
                android:padding="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="Invite Friend"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                app:drawableTint="@android:color/secondary_text_dark" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="80dp"
                android:layout_marginRight="50dp"
                android:layout_marginBottom="5dp"
                android:drawableLeft="@android:drawable/stat_notify_chat"
                android:drawablePadding="10dp"
                android:padding="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="Notification"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                app:drawableTint="@android:color/secondary_text_dark" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="80dp"
                android:layout_marginRight="50dp"
                android:layout_marginBottom="5dp"
                android:drawableLeft="@android:drawable/sym_action_chat"
                android:drawablePadding="10dp"
                android:padding="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="Help"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                app:drawableTint="@android:color/secondary_text_dark" />
        </LinearLayout>
    </RelativeLayout>
</ScrollView>