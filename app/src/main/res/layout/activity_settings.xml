<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SettingsActivity"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/myProfile"
                style="@style/parent"
                android:layout_marginBottom="2dp"
                android:animateLayoutChanges="true"
                android:background="@android:color/white"
                android:gravity="left"
                android:orientation="horizontal"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/profile_image"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_margin="6dp"
                        android:src="@drawable/profile"
                        app:civ_border_color="#FF000000" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp"
                    android:orientation="vertical"
                    android:paddingTop="30dp">

                    <TextView
                        android:id="@+id/txtUsername"
                        style="@style/parent"
                        android:text="Username"
                        android:textSize="18sp"
                        android:textStyle="bold|normal" />

                    <TextView
                        android:id="@+id/about"
                        style="@style/wrap"
                        android:text="About" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/account"
                style="@style/parent"
                android:animateLayoutChanges="true"
                android:background="@android:color/white"
                android:gravity="left"
                android:orientation="horizontal"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <ImageView
                        style="@style/match"
                        android:padding="10dp"
                        android:src="@drawable/ic_key"
                        android:tint="@color/logocolor" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        style="@style/wrap"
                        android:text="Account"
                        android:textSize="16sp"
                        android:textStyle="bold|normal" />

                    <TextView
                        style="@style/wrap"
                        android:text="Security, Delete, Changes" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/privacy"
                style="@style/parent"
                android:animateLayoutChanges="true"
                android:background="@android:color/white"
                android:gravity="left"
                android:orientation="horizontal"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <ImageView
                        style="@style/match"
                        android:padding="10dp"
                        android:src="@drawable/ic_lock"
                        android:tint="@color/logocolor" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        style="@style/wrap"
                        android:text="Privacy"
                        android:textSize="16sp"
                        android:textStyle="bold|normal" />

                    <TextView
                        style="@style/wrap"
                        android:text="Block contacts, privacy" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/contact"
                style="@style/parent"
                android:animateLayoutChanges="true"
                android:background="@android:color/white"
                android:gravity="left"
                android:orientation="horizontal"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <ImageView
                        style="@style/match"
                        android:padding="10dp"
                        android:src="@drawable/ic_helpcall"
                        android:tint="@color/logocolor" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        style="@style/wrap"
                        android:text="Contact us"
                        android:textSize="16sp"
                        android:textStyle="bold|normal" />

                    <TextView
                        style="@style/wrap"
                        android:text="Block contacts, privacy" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/feedback"
                style="@style/parent"
                android:animateLayoutChanges="true"
                android:background="@android:color/white"
                android:gravity="left"
                android:orientation="horizontal"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <ImageView
                        style="@style/match"
                        android:padding="10dp"
                        android:src="@drawable/ic_feedback"
                        android:tint="@color/logocolor" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        style="@style/wrap"
                        android:text="Feedback"
                        android:textSize="16sp"
                        android:textStyle="bold|normal" />

                    <TextView
                        style="@style/wrap"
                        android:text="Give your feedback" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/help"
                style="@style/parent"
                android:animateLayoutChanges="true"
                android:background="@android:color/white"
                android:gravity="left"
                android:orientation="horizontal"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <ImageView
                        style="@style/match"
                        android:padding="10dp"
                        android:src="@drawable/ic_help"
                        android:tint="@color/logocolor" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <TextView
                        style="@style/wrap"
                        android:text="Help"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        style="@style/wrap"
                        android:text="Help centre, contact us, privacy policy" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/invite"
                style="@style/parent"
                android:layout_below="@id/deleteAccount"
                android:animateLayoutChanges="true"
                android:background="@android:color/white"
                android:gravity="left"
                android:orientation="horizontal"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <ImageView
                        style="@style/match"
                        android:padding="10dp"
                        android:src="@drawable/ic_share"
                        android:tint="@color/logocolor" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <TextView
                        style="@style/wrap"
                        android:text="Invite a friend"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        style="@style/wrap"
                        android:text="Invite your friends or family" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/deleteAccount"
                style="@style/parent"
                android:layout_below="@id/invite"
                android:animateLayoutChanges="true"
                android:background="@android:color/white"
                android:gravity="left"
                android:orientation="horizontal"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <ImageView
                        style="@style/match"
                        android:padding="10dp"
                        android:src="@drawable/ic_delete"
                        android:tint="@color/logocolor" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        style="@style/wrap"
                        android:text="Delete my account"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        style="@style/wrap"
                        android:text="My account delete permanently" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/appInfo"
                style="@style/parent"
                android:animateLayoutChanges="true"
                android:background="@android:color/white"
                android:gravity="left"
                android:orientation="horizontal"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <ImageView
                        style="@style/match"
                        android:padding="10dp"
                        android:src="@drawable/ic_baseline_info_24"
                        android:tint="@color/logocolor" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <TextView
                        style="@style/wrap"
                        android:text="App info"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        style="@style/wrap"
                        android:text="About App" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/logout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/background_button"
                android:layout_gravity="center"
                android:padding="10dp">

                <TextView
                    style="@style/wrap"
                    android:text="Logout"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"

                android:text="Powered by @shrishailbagale" />
        </LinearLayout>

    </LinearLayout>

</ScrollView>